<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  	<modelVersion>4.0.0</modelVersion>
  	<groupId>es.us.isa</groupId>
  	<artifactId>FaMaTestSuite</artifactId>
  	<name>FaMA TestSuite</name>
  	<version>0.8.0</version>
  	<description>Test suite for FaMa</description>
  	<dependencies>
		<dependency>
			<groupId>es.us.isa</groupId>
			<artifactId>FaMaSDK</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>es.us.isa</groupId>
			<artifactId>FaMaFeatureModel</artifactId>
			<version>0.8.3</version>
		</dependency>
		<dependency>
			<groupId>es.us.isa</groupId>
			<artifactId>FaMaAttributedModel</artifactId>
			<version>1.0.1</version>
		</dependency>
	</dependencies>
	<repositories>
		<repository>
			<id>forja</id>
			<name>Rediris's forge's repository</name>
			<url>https://forja.rediris.es/svn/famats/trunk/artifacts</url>
		</repository>
	</repositories>
	<distributionManagement>
		<repository>
			<id>forja</id>
			<name>Rediris's forge's repository</name>
			<url>https://forja.rediris.es/svn/famats/trunk/artifacts</url>
		</repository>
	</distributionManagement>
	<build>
		<defaultGoal>compile</defaultGoal>
		<directory>target</directory>
		<sourceDirectory>src</sourceDirectory>
		<outputDirectory>target/classes</outputDirectory>
		<testSourceDirectory>test</testSourceDirectory>
		<testOutputDirectory>target/test-classes</testOutputDirectory>
		<resources>
			<resource>
				<directory>resources</directory>
			</resource>
		</resources>
		<testResources>
      		<testResource>
        		<directory>resources</directory>
      		</testResource>
    	</testResources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>6</source>
					<target>6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<outputDirectory>lib_noscm</outputDirectory>
							<overWriteReleases>true</overWriteReleases>
							<overWriteSnapshots>false</overWriteSnapshots>
							<overWriteIfNewer>true</overWriteIfNewer>
							<stripVersion>true</stripVersion>
							<artifactItems>
								<artifactItem>
                  					<groupId>es.us.isa</groupId>
                  					<artifactId>FaMaFeatureModel</artifactId>
                  					<version>0.8.3</version>
                				</artifactItem>
                				<artifactItem>
                  					<groupId>es.us.isa</groupId>
                  					<artifactId>FaMaAttributedModel</artifactId>
                  					<version>1.0.1</version>
                				</artifactItem>
								<artifactItem>
                  					<groupId>es.us.isa</groupId>
                  					<artifactId>ChocoReasoner</artifactId>
                  					<version>1.0.1</version>
                				</artifactItem>
                				<artifactItem>
                  					<groupId>es.us.isa</groupId>
                  					<artifactId>Sat4jReasoner</artifactId>
                  					<version>1.0.0</version>
                  					</artifactItem>
                				<artifactItem>
                  					<groupId>es.us.isa</groupId>
                  					<artifactId>JaCoPReasoner</artifactId>
                  					<version>1.0.0</version>
                  				</artifactItem>
                				<artifactItem>
                  					<groupId>es.us.isa</groupId>
                  					<artifactId>JavaBDDReasoner</artifactId>
                  					<version>1.0.0</version>
                  				</artifactItem>
							</artifactItems>
						</configuration>
					</execution>					
				</executions>
			</plugin>	
		</plugins>
	</build>
</project>